{% extends 'base.html.twig' %}

{% block title %}Les projets{% endblock %}

{% block body %}
    <h4>
        Tous les projets existants :
    </h4>
    <ul class="list-group">
        {% for project in projects %}
        <li class="list-group-item d-flex justify-content-between">
            <div class="container">
                <div class="row ">
                  <div class="col align-self-center">
                    <a href="{{ path('sources.visit', {'projectId': project.id}) }}" class="text-decoration-none"   >
                        {{ project.nom }}
                    </a>
                  </div>
                  <div class="col-5 align-self-center">
                    <span class="badge text-dark rounded-pill fs-6">
                        <div class="w-100 d-flex flex-column align-items-start mt-2 mb-2">
                            <div class="mb-2">
                                Langue originale : <span class="fw-bolder ms-2 me-3">{{ language_name(project.langueoriginale) }}</span> 
                            </div>
                            <div>
                                Langue(s) de traduction : <span class="fw-bolder ms-2">{{ language_name(project.languetraduction1) }}</span>
                                {% if project.languetraduction2 != NULL %}
                                    <span class="fw-bolder ms-2">/ {{ language_name(project.languetraduction2) }}</span>
                                {% endif %}
                                {% if project.languetraduction3 != NULL %}
                                    <span class="fw-bolder ms-2">/ {{ language_name(project.languetraduction3) }}</span>
                                {% endif %}
                            </div>
                        </div>
                    </span>
                  </div>
                  <div class="col align-self-center text-end">
                    <span class="badge text-dark rounded-pill">
                        (créé le {{ project.getCreatedAt()|date('Y-m-d') }})
                    </span>
                  </div>
                </div>
              </div>
        </li>
        {% endfor %}
    </ul>
{% endblock %}
